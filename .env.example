# Soly Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=Soly
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# For better performance, consider using a paid RPC provider:
# - https://www.helius.dev/
# - https://www.quicknode.com/
# - https://www.alchemy.com/solana

# Twitter/X API Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# OpenAI API
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
AI_MODEL=gpt-4-turbo-preview

# Anthropic API (Optional)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/soly
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Monitoring
# Sentry for error tracking: https://sentry.io/
SENTRY_DSN=
LOG_LEVEL=INFO

# Features
ENABLE_TWITTER_BOT=true
ENABLE_BLOCKCHAIN_MONITOR=true
ENABLE_AI_ANALYSIS=true

# Rate Limiting
MAX_TWEETS_PER_DAY=50
MIN_TWEET_INTERVAL_MINUTES=15
API_RATE_LIMIT=100

# Alert Thresholds
RUG_RISK_THRESHOLD=70.0
WHALE_TRANSACTION_THRESHOLD_SOL=1000.0
PRICE_CHANGE_ALERT_THRESHOLD_PCT=50.0
